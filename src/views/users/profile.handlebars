<div class="container-fluid bg-danger d-flex justify-content-center align-items-center" style="min-height: 100vh">
    <div class="col-10 bg-dark opacity-75 text-white p-5">
        <h1 class="text-center mb-3">Bienvenido {{session.user.first_name}}!</h1>
        <input type="hidden" id="user_id" value="{{session.user._id}}">
        
        <h5>Nombre completo: {{session.user.last_name}}, {{session.user.first_name}}</h5>
        <h5>Rol: {{session.user.rol}}</h5>
        <h5>E-Mail: {{session.user.email}}</h5>
        <h5>Edad: {{session.user.age}}</h5>
        <h5>ID de carrito: {{session.user.cart}}</h5>
        <h4 class="text-danger">{{message}}</h4>
        <div class="d-flex justify-content-center">
            <a href="/api/sessions/logout" class="btn btn-danger me-3">Logout</a>
            <a href="/users/documents" class="btn btn-danger me-3">Carga de Documentos</a>
            <button id="change_rol" class="btn btn-danger me-3">Cambio de Rol</button>
        </div>
        <div class="mt-3 d-flex justify-content-center">
            {{#if session.user.abmPanel.products}}
                <a href="/products/abm" class="btn btn-danger me-3">ABM Productos</a>
            {{/if}}
            {{#if session.user.abmPanel.users}}
                <a href="/users/abm" class="btn btn-danger me-3">Gestion de Usuarios</a>
            {{/if}}
        </div>
    </div>
</div>

<script src="/js/profile.js"></script>