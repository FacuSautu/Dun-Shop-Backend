<div class="container-fluid bg-danger d-flex justify-content-center align-items-center" style="min-height: 100vh">
    <div class="col-10 bg-dark opacity-75 p-3 text-white">
        <div class="row">
            <div class="col-4">
                {{!-- <img class="w-100" src="https://commercial.bunn.com/img/image-not-available.png" alt="{{product.title}}"> --}}
                <img src="{{product.thumbnails}}" class="w-100" alt="{{product.title}}">
            </div>
            <div class="col-8 d-flex flex-column justify-content-between">
                <h1 class="text-center">{{product.title}}</h1>
                <div>
                    <p>{{product.description}}</p>
                    <p>Precio: ${{product.price}}</p>
                    <p>Stock: {{product.stock}}</p>
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <a href="/products/{{this._id}}" class="btn btn-danger">Add to cart</a>
                </div>
            </div>
        </div>
    </div>
</div>